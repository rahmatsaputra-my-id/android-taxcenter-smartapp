<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".NPWPFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/BlueDark"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:textColor="@color/white"
                    android:text="Apa itu NPWP?"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/garis"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/colorYellow" />

                <View
                    android:id="@+id/garis3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorYellow" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/wp1"
                        android:layout_gravity="center"
                        android:id="@+id/gambarView"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:textColor="@color/white"
                        android:justificationMode="inter_word"
                        android:text="@string/isi_npwp" />

                <Button
                    android:id="@+id/btn_daftar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/button_round"
                    android:layout_gravity="center_horizontal"
                    android:text="Ingin Membuat NPWP?"
                    android:textStyle="italic"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"

                    android:layout_marginBottom="16dp"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</ScrollView>